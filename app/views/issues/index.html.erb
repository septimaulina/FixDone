<div class="col-sm-9">
  <div class="heading_container">
    <div class="inner">
      <h2 class="fa fa-dekstop">Project Issues</h2> &nbsp 
      <%= link_to '<i class="material-icons">add</i>'.html_safe, new_project_issue_path, class: 'waves-effect waves-light btn-floating btn tooltipped', data: {tooltip: 'Create new issue', position: 'right', delay: 50} %>
    </div>
  </div>
</div>

<!-- tabs -->
 <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a href="#test1">Date </a></li>
        <li class="tab col s3"><a href="#test2">Name </a></li>
      </ul>
    </div>
    <div id="test1" class="col s12">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Status</th>
              <th>Update at</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @issues.each do |issue| %>
              <tr>
                <td><%= link_to issue.name, [issue.project,issue] %></td>
                <td><%= issue.description %></td>
                <td><%= issue.issue_status.try(:name) %></td>
                <td><%= time_ago_in_words(issue.created_at) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    <div id="test2" class="col s12">
      <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Status</th>
              <th>Update at</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @issues.sort{ |a,b| a.name <=> b.name }.each do |issue| %>
              <tr>
                <td><%= link_to issue.name, [issue.project,issue] %></td>
                <td><%= issue.description %></td>
                <td><%= issue.issue_status.try(:name) %></td>
                <td><%= time_ago_in_words(issue.created_at) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
<!-- end tabs -->