<div class="row">
  <div class="col s8">
  <%= simple_form_for(@project) do |f| %>
    <%= f.error_notification %>

    <div class="input-field">
      <%= f.input :name, class: 'validate' %>
    </div>

    <div class="input-field">
    	<%= f.input :description, :input_html => { class: 'materialize-textarea'}  %>
    </div>

    <%= link_to '<i class="fa fa-chevron-left fa-fw"></i> Back'.html_safe, projects_path, class: 'waves-effect waves-light btn' %> 
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="material-icons">send</i>
    </button>
  <% end %>
</div>
  <div class="col s4 m4">
    <div class="card-panel purple lighten-2">
      <span class="white-text">Tulis judul Project anda berserta deskripsinya, kemudian click submit untuk create project
      </span>
    </div>
  </div>
</div>