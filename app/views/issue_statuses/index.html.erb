<p id="notice"><%= notice %></p>

<h1>Listing Issue Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_statuses.each do |issue_status| %>
      <tr>
        <td><%= issue_status.name %></td>
        <td><%= issue_status.description %></td>
        <td><%= link_to 'Show', issue_status %></td>
        <td><%= link_to 'Edit', edit_issue_status_path(issue_status) %></td>
        <td><%= link_to 'Destroy', issue_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue status', new_issue_status_path %>
